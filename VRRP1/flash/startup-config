route-map OUTBOND_TO_ISP1 permit 10
   match ip address prefix-list LAN_TO_ISP
!
router bgp 65000
   router-id 11.11.11.11
   neighbor IBGP peer group
   neighbor IBGP remote-as 65000
   neighbor IBGP next-hop-self
   neighbor ISP1 peer group
   neighbor ISP1 remote-as 1111
   neighbor ISP1 route-map OUTBOND_TO_ISP1 out
   neighbor 10.10.10.1 peer group ISP1
   neighbor 192.168.0.2 peer group IBGP
   network 192.168.0.0/24
!
