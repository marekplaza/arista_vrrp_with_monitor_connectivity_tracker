monitor connectivity
   interval 5
   no shutdown
   interface set int_to_ISP1 Ethernet1
   !
   host DNS
      description "ping do DNS google 8.8.8.8"
      local-interfaces int_to_ISP1 address-only
      ip 8.8.8.8
!
event-handler DNS_google_DOWN
   action bash Cli -p15 -c $'enable\n configure\n interface Ethernet 4\n vrrp 1 priority-level 50\n end'
   !
   trigger on-logging
      regex DNS.*8.8.8.8* is unreachable .*Ethernet1
!
event-handler DNS_google_UP
   action bash Cli -p15 -c $'enable\n configure\n interface Ethernet 4\n vrrp 1 priority-level 250\n end'
   !
   trigger on-logging
      regex DNS.*8.8.8.8* is reachable .*Ethernet1
!
event-handler VRRP
